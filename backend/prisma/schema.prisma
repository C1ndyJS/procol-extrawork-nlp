// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ExtraWork {
  id          String   @id
  title       String
  description String
  status      String   @default("pending")
  priority    String   @default("medium")
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  resources   Resource[]
}

// Valid statuses: pending, in_progress, completed, cancelled, on_hold

model Resource {
  id           String     @id
  name         String
  type         String
  availability String     @default("available")
  url          String?
  metadata     String?
  extraWorkId  String?
  extraWork    ExtraWork? @relation(fields: [extraWorkId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Action {
  id          String   @id @default(uuid())
  intent      String
  description String
  keywords    String
  handler     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
